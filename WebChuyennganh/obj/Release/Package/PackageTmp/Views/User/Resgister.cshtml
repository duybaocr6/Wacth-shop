
@{
    ViewBag.Title = "Resgister";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<div class="account-in">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                    <div class="register-top-grid">
                        <h2>PERSONAL INFORMATION</h2>
                        <div>
                            <span>Full Name<label>*</label></span>
                            @Html.TextBox("HoTen")
                            @ViewData["Loi2"]
                        </div>
                        <div>
                            <span>UserName<label>*</label></span>
                            @Html.TextBox("TaiKhoankh")
                            @ViewData["Loi3"]
                        </div>
                        <div>
                            <span>Date of birth<label>*</label></span>
                            @Html.TextBox("NgaySinh")
                            @ViewData["Loi6"]
                        </div>
                        <div>
                            <span>Phone Number<label>*</label></span>
                            @Html.TextBox("SoDT")
                            @ViewData["Loi7"]
                        </div>
                        <div>
                            <span>Sex<label>*</label></span>
                            @Html.TextBox("GioiTinh")
                            @ViewData["Loi8"]
                        </div>
                        <div>
                            <span>Email Address<label>*</label></span>
                            @Html.TextBox("Email")
                            @ViewData["Loi10"]
                        </div>
                        <div class="clearfix"> </div>
                        <a class="news-letter" href="#">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Sign Up for Newsletter</label>
                        </a>
                    </div>
                    <div class="register-bottom-grid">
                        <h2>LOGIN INFORMATION</h2>
                        <div>
                            <span>Password<label>*</label></span>
                            @Html.TextBox("MatKhaukh")
                            @ViewData["Loi4"]
                        </div>
                        <div>
                            <span>Confirm Password<label>*</label></span>
                            @Html.TextBox("NhapLaiMatKhaukh")
                            @ViewData["Loi5"]
                        </div>

                    </div>
            <div class="register-but">
                        <input type="submit" value="submit">
            </div>

        }
    </div>
</div>
<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3150859.767904157!2d-96.62081048651531!3d39.536794757966845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1408111832978"> </iframe>
</div>

