@model IEnumerable<WebChuyennganh.Models.DongHo>

@{
    ViewBag.Title = "Đồng hồ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Danh sách đồng hồ</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create", "DongHoes")">Thêm mới</a>
</p>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã đồng hồ
                        </th>
                        <th>
                            Hình đại diện
                        </th>
                        <th>
                            Thương hiệu
                        </th>
                        <th>
                            Kiểu máy
                        </th>
                        <th>
                            Chất liệu dây
                        </th>
                        <th>
                            Giá bán
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Hành động
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Details", "DongHoes", new { id = item.MaDH })">
                                    @Html.DisplayFor(modelItem => item.MaDH)
                                </a>
                            </td>
                            <td>
                                <img src="@Url.Content(item.HinhDD)" style="max-width:120px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThuongHieu.TenTH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KieuMay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ChatLieuDay)
                            </td>
                            <td>
                                @item.GiaBan.ToString("#,##0.00")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "DongHoes", new { id = item.MaDH })">Chỉnh sửa</a> |
                                <a class="btn btn-danger" href="@Url.Action("Delete", "DongHoes", new { id = item.MaDH })">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>