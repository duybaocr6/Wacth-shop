@model WebChuyennganh.Models.CTPhieuNhap

@{
    ViewBag.Title = "Thêm mặt hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Thêm mặt hàng vào phiếu nhập</h2>

@using (Html.BeginForm("Create", "CTPhieuNhaps", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="text-danger">@ViewData["TrungKhoaChinh"]</span>

        <div class="form-group">
            @Html.LabelFor(model => model.MaDH, "Mã đồng hồ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaDH", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", step = "1" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewData["TrongSoLuong"]</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", step = "1" } })
                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
                <span class="text-danger">@ViewData["TrongGiaTien"]</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm hàng" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-primary" href="@Url.Action("Index", "PhieuNhaps")">Về danh sách</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
