@model WebChuyennganh.Models.DonHang

@{
    ViewBag.Title = "Xóa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Xóa đơn hàng</h2>

<h5>Bạn có chắc muốn xóa đối tượng?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.KhachHang.TaiKhoan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhachHang.TaiKhoan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayDat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayGiao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoDT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TongSoMua)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TongSoMua)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ThanhToan)
        </dt>

        <dd>
            @Model.ThanhToan.ToString("#,##0.00")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GhiChu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NhanVien.TaiKhoan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhanVien.TaiKhoan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai.TenTT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai.TenTT)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a class="btn btn-primary" href="@Url.Action("Index", "DonHangs")">Về danh sách</a>
        </div>
    }
</div>

<h3 class="text-center">Danh sách chi tiết đơn hàng</h3>

<table class="table table-bordered table-striped">
    <thead class="thead-dark text-white text-center">
        <tr>
            <th>
                Mã đồng hồ
            </th>
            <th>
                Hình đại diện
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CTDonHangs)
        {
            <tr>
                <td>
                    @item.DongHo.MaDH
                </td>
                <td>
                    <img src="@Url.Content(item.DongHo.HinhDD)" style="max-width:120px;" />
                </td>
                <td>
                    @item.DongHo.ThuongHieu.TenTH
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    @item.GiaTien.ToString("#,##0.00")
                </td>
                <td>
                    @item.ThanhTien.ToString("#,##0.00")
                </td>
            </tr>
        }
    </tbody>
</table>