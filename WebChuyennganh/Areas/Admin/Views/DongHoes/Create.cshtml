@model WebChuyennganh.Models.DongHo

@{
    ViewBag.Title = "Thêm đồng hồ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    WebChuyennganh.Models.NhanVien nv = (WebChuyennganh.Models.NhanVien)Session["NhanVien"];
}

<h2 class="h3 mb-2 text-gray-800">Thêm mới đồng hồ</h2>

