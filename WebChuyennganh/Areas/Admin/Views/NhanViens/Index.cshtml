@model IEnumerable<WebChuyennganh.Models.NhanVien>

@{
    ViewBag.Title = "Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Danh sách nhân viên</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create", "NhanViens")">Thêm mới</a>
</p>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Tài khoản
                        </th>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Ngày sinh
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th>
                            Nhóm
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>
                            Hành động
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details", "NhanViens", new { id = item.TaiKhoan })">
                                @Html.DisplayFor(modelItem => item.TaiKhoan)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoDT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </td>
                        <td>
                            @if (item.GioiTinh)
                            {
                                <span>Nam</span>
                            }
                            else
                            {
                                <span>Nữ</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nhom.TenNhom)
                        </td>
                        <td>
                            @if (item.TrangThai)
                            {
                                <span>Kích hoạt</span>
                            }
                            else
                            {
                                <span>Khóa</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("Edit", "NhanViens", new { id = item.TaiKhoan })">Chỉnh sửa</a> |
                            <a class="btn btn-danger" href="@Url.Action("Delete", "NhanViens", new { id = item.TaiKhoan })">Xóa</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>