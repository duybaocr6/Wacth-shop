@model WebChuyennganh.Models.PhieuNhap

@{
    ViewBag.Title = "Chi tiết phiếu nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Chi tiết phiếu nhập</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SoPN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoPN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NhaCungCap.TenNCC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TongSoNhap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TongSoNhap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ThanhToan)
        </dt>

        <dd>
            @Model.ThanhToan.ToString("#,##0.00")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenTKLap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTKLap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenTKCapNhat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTKCapNhat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayNhap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayCapNhat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-warning" href="@Url.Action("Edit", "PhieuNhaps", new { id = Model.SoPN })">Chỉnh sửa</a> |
    <a class="btn btn-primary" href="@Url.Action("Index", "PhieuNhaps")">Về danh sách</a>
</p>

<h3 class="text-center">Danh sách chi tiết phiếu nhập</h3>

<table class="table table-bordered table-striped">
    <thead class="thead-dark text-white text-center">
        <tr>
            <th>
                Mã đồng hồ
            </th>
            <th>
                Hình đại diện
            </th>
            <th>
                Thương hiệu
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Thành tiền
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CTPhieuNhaps)
        {
            <tr>
                <td>
                    @item.DongHo.MaDH
                </td>
                <td>
                    <img src="@Url.Content(item.DongHo.HinhDD)" style="max-width:120px;" />
                </td>
                <td>
                    @item.DongHo.ThuongHieu.TenTH
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    @item.GiaTien.ToString("#,##0.00")
                </td>
                <td>
                    @item.ThanhTien.ToString("#,##0.00")
                </td>
            </tr>
        }
    </tbody>
</table>