@model IEnumerable<WebChuyennganh.Models.PhanHoi>

@{
    ViewBag.Title = "Phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="h3 mb-2 text-gray-800">Danh sách phản hồi</h2>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Họ tên
                        </th>
                        <th>
                            Ngày gửi
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Chủ đề
                        </th>
                        <th>
                            Đã đọc
                        </th>
                        <th>
                            Hành động
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayGui)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ChuDe)
                        </td>
                        <td>
                            @if (item.TrangThai)
                            {
                                <span>Đã đọc</span>
                            }
                            else
                            {
                                <span>Chưa đọc</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-info" href="@Url.Action("Details", "PhanHois", new { id = item.MaPH })">Chi tiết</a> |
                            <a class="btn btn-warning" href="@Url.Action("Edit", "PhanHois", new { id = item.MaPH })">Cập nhật</a> |
                            <a class="btn btn-danger" href="@Url.Action("Delete", "PhanHois", new { id = item.MaPH })">Xóa</a>
                        </td>
                    </tr>   
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
